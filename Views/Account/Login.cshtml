@using RekvalifikaceApp.ViewModels
@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}
<h1>Login</h1>
<div class="text-danger" asp-validation-summary="All"></div>
<form asp-action="Login" method="post">
    @Html.AntiForgeryToken() <!-- Přidání AntiForgeryToken -->
    <input type="hidden" asp-for="ReturnUrl" />
    <div class="form-group">
        <label asp-for="UserName">Uživatelské jméno</label>
        <input asp-for="UserName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Password">Heslo</label>
        <input asp-for="Password" class="form-control" />
    </div>
    <div class="form-group">
        Remember me? <input type = "checkbox" asp-for="Remember"/>
    </div>
    <button class="btn btn-primary mt-3" type="submit">Log In</button>
</form>